{
	"name" : "lalbert/silex-mongodb",
	"description" : "Simple mongodb service provider for Silex 2.x and official mongodb driver",
	"license" : "MIT",
	"homepage" : "https://github.com/lalbert/silex-mongodb",
	"authors" : [{
			"name" : "Luc ALBERT",
			"homepage" : "https://github.com/lalbert"
		}
	],
	"type" : "library",
	"keywords" : [
		"silex",
		"mongodb",
		"provider"
	],
	"require" : {
		"mongodb/mongodb" : "*",
		"silex/api" : "~2.0"
	},
	"require-dev" : {
		"silex/silex" : "~2.0",
		"phpunit/phpunit" : "~4.8 || ~5.3",
		"codacy/coverage" : "dev-master"
	},
	"autoload" : {
		"psr-4" : {
			"Lalbert\\Silex\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"Lalbert\\Silex\\Tests\\" : [
				"tests/unit"
			]
		}
	}
}
